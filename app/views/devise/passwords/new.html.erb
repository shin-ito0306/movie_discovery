<div class="container my-5 py-5">
  <div class="row justify-content-center">
    <div class="card col-sm-5 text-center pb-4">
      <h2 class="mb-5 mt-5">パスワードを忘れた方</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="field mb-5">
          
          <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレス', autocomplete: "email", class: "col-10 mb-2" %>
        </div>
      
        <div class="actions mb-3">
          <%= f.submit "パスワードの再設", class: 'btn btn-success col-10' %>
        </div>
      <% end %>
      
      <div class="row justify-content-center mt-5">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
  
    