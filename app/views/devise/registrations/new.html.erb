<div class="container my-5">
  <div class="row justify-content-center">
    <div class="card col-sm-5 text-center pb-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <h2 class="mb-5 mt-5">Sign up</h2>
        
        <div class="field mb-3">
          <%= f.text_field :name, class: "col-10 mb-3", placeholder: 'ユーザー名' %>
        </div>
      
        <div class="field mb-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-10 mb-3", placeholder: 'メールアドレス' %>
        </div>
      
        <div class="field mb-3">
          <%= f.password_field :password, autocomplete: "new-password", class: "col-10 mb-3", placeholder: '新しいパスワード(6桁以上)' %>
        </div>
      
        <div class="field mb-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-10 mb-4", placeholder: '再度パスワードの入力' %>
        </div>
      
        <div class="mb-3">
          <%= f.submit "Sign up", class: "btn btn-success col-10" %>
        </div>
      <% end %>
      <div class="row justify-content-center mb-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>