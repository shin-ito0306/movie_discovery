<% if review.liked_by?(current_member) %>
  <%= link_to review_likes_path(review.id), method: :delete, remote: true do %>
    <i class="fas fa-heart" style="color: blue;"></i><%= review.likes.count %>
  <% end %>
<% else %>
  <%= link_to review_likes_path(review.id), method: :post, remote: true do %>
    <i class="far fa-heart" style="color: blue;"></i><%= review.likes.count %>
  <% end %>
<% end %>