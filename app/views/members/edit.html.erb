<%= render 'layouts/error_message', object: @member %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="card col-sm-5 pb-4 pt-4">
      <%= form_with model:@member, local:true do |f| %>
        <div class="field mb-3 text-center">
          <%= f.label :name, class: "text-right" %><br>
          <%= f.text_field :name, class: "col-10 mb-3", placeholder: 'ユーザー名' %>
        </div>
        <div class="field mb-3 text-center">
          <%= f.label :email, class: "col-10" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-10 mb-3", placeholder: 'メールアドレス' %>
        </div>
        
        <div class="field mb-3 text-center">
          <%= f.label :introduction, class: "col-10" %>
          <%= f.text_area :introduction, class: "col-10 " %>
        </div>
        
        <div class="field mb-3 text-center">
          <%= f.attachment_field :member_image, class: "col-10" %>
        </div>
        
        <div class="mb-3 text-center">
          <%= f.submit '保存', class: "btn btn-primary col-10" %>
        </div>
        <% end %>
    </div>
  </div>
</div>