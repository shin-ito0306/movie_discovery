<% if @notifications.exists? %>
  <% @notifications.each do |notification| %>
    <%= link_to member_path(notification.visiter_id) do %>
      <%= attachment_image_tag notification.visiter, :member_image, :fill, 100, 100, format: 'jpeg' %>
    <% end %>
    <% case notification.action %>
      <% when 'like' %>
        <%= link_to "#{notification.visiter}がいいねを押しました", review_path(notification.review_id) %>
      <% when 'follow' %>
        <%= link_to "#{notification.visiter}にフォローされました", member_path(notification.visiter_id) %>
    <% end %>
  <% end %>
  <% end %>
  
      
    