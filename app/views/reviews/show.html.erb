<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-4 px-0">
      <%= link_to movie_path(@review.movie_number) do %>
      <%= image_tag 'https://image.tmdb.org/t/p/w300' + @review.movie_image, class: "card-img-top" %>
      <% end %>
    </div>
    <div class="col-5 bg-light">
      <div class="card-body">
        <div class="row mb-3">
          <div class="">
            <%= link_to member_path(@review.member.id) do %>
              <%= attachment_image_tag @review.member, :member_image, :fill, 10, 10, format: 'jpeg', fallback:"unnamed.png", size:'45x45', class: "rounded-circle" %>
              <%= @review.member.name %>
            <% end %>
          </div>
          
          <div class="ml-auto">
            <span><%= link_to '編集', edit_review_path(@review.id), class: "btn btn-outline-danger btn-sm ml-3" %></span>
            <span id="like_button<%= @review.id %>">
              <%= render 'likes/like', review: @review %>
            </span>
          </div>
        
          
        </div>
        <div class="row border-bottom">
          <div class="col-9">
            <h4><%= @review.movie_name %></h4>
          </div>
          <div class="col mt-3">
            
          </div>
          
          
        </div>
        
        
        <div id="review-evaluation<%= @review.id %>" data-score="<%= @review.evaluation %>"></div>
        <div class="row mt-3">
          <h5 class="mr-3">レビュー内容</h5>
        
        </div>
        
        
        
        <%= @review.review_detail %>
        
      </div>
      
    </div>
  </div>
</div>
<script>
        $('#review-evaluation<%= @review.id %>').raty({
          size: 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',
          readOnly: true,
          score: <%= @review.evaluation %>,
        });
      </script>