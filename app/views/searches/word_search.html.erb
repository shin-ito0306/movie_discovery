<%= render 'movies/list', movies: @movies %>
<div class="container my-4">
  <div class="row justify-content-center">
    <% @pages.each do |page| %>
      <% if @page == page %>
        <%= link_to "#{page}", searches_word_search_path(page_id: page, word_name: @word), :style=>"color:black;", class: "m-1" %>
      <% else %>
        <%= link_to "#{page}", searches_word_search_path(page_id: page, word_name: @word), class: "m-1" %>
      <% end %>
    <% end %>
  </div>
</div>